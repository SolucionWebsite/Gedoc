@{
    Layout = null; // "~/Views/Shared/_LayoutVacio.cshtml";
    ViewBag.Title = "Observaciones Oficio";
    int oficioId = ViewBag.OficioId ?? 0;
}

<style>
    .k-grid {
        font-size: 0.8em;
    }
</style>

<script src="~/Scripts/form.js"></script>
<script src="~/Scripts/accionesbandeja.js"></script>

