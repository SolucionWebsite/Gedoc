<script>

    $(function () {
        $(".k-grid-search input").prop("placeholder", "Buscar...");
        $(".k-grid-search input").prop("title", "Buscar...");

    });

    function refrescaGrid() {
        var gridK = $("#gridHistorialOficio").data("kendoGrid");
        if (gridK) {
            gridK.dataSource.read();
        }
    }

    function extraDataGrillaHist() {
        return {
